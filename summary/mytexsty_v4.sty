%%%%%%%%% figure location: htbp
\newcommand{\fightbp}[4][width=5cm]{%
\begin{figure}[htbp]
	\begin{center}
		\includegraphics[#1]{#2}
		\caption{#3}
		\label{fig:#4}
	\end{center}
\end{figure}
}


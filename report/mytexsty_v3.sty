%%%%%%%%% two figures in one line w/ caption number for each figure
\newcommand{\twofigchtbp}[1][width=4cm]{
    \def\thincludegraphics{\includegraphics[#1]}
    \figshtbpcontent
}
\newcommand{\figshtbpcontent}[6]{
\begin{figure}[htbp]
    \begin{minipage}{0.5\hsize}
        \begin{center}
        \thincludegraphics{#1}
        \end{center}
        \caption{#2}
        \label{fig:#3}
    \end{minipage}
    \begin{minipage}{0.5\hsize}
        \begin{center}
        \thincludegraphics{#4}
        \end{center}
        \caption{#5}
        \label{fig:#6}
    \end{minipage}
\end{figure}
}

%%%%%%%%% two figures in one line w/o caption number for each figure
\newcommand{\twofightbp}[1][width=4cm]{
    \def\thincludegraphicssc{\includegraphics[#1]}
    \figshtbpcontentsc
}
\newcommand{\figshtbpcontentsc}[8]{
\addtocounter{figure}{-2}
\begin{figure}[htbp]
    \begin{minipage}{0.5\hsize}
        \begin{center}
        \thincludegraphicssc{#1}
        \end{center}
        \captionsetup{labelformat=empty,labelsep=none}
        \caption{#2}
        \label{fig:#3}
    \end{minipage}
    \begin{minipage}{0.5\hsize}
        \begin{center}
        \thincludegraphicssc{#4}
        \end{center}
        \captionsetup{labelformat=empty,labelsep=none}
        \caption{#5}
        \label{fig:#6}
    \end{minipage}
    \caption{#7}
    \label{fig:#8}
\end{figure}
}


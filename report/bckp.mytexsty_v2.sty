\newcommand{\figshtbp}[1][width=4cm]{
    \def\thincludegraphics{\includegraphics[#1]}
    \figshtbpcontent
}
\newcommand{\figshtbpcontent}[6][]{
\begin{figure}[htbp]
    \begin{minipage}{0.5\hsize}
        \begin{center}
        \thincludegraphics{#1}
        \end{center}
        \caption{#2}
        \label{fig:#3}
    \end{minipage}
    \begin{minipage}{0.5\hsize}
        \begin{center}
        \thincludegraphics{#4}
        \end{center}
        \caption{#5}
        \label{fig:#6}
    \end{minipage}
\end{figure}
}

